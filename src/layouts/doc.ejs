<!DOCTYPE html>
<html>
  <head>
    <title><%= locals.title ? `${title} | Contentjet` : 'Contentjet - Open source headless CMS' %></title>
    <%- include('includes/stylesheets'); %>
    <link rel="stylesheet" href="/highlight/styles/default.css">
    <link rel="stylesheet" href="/highlight/styles/atom-one-light.css">
    <script src="/highlight/highlight.pack.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
  </head>
  <body class="<%= 'documentation ' + slugify(locals.title); %>">
    <%- include('includes/header'); %>
    <div class="main">
      <div class="doc">
        <aside class="doc__sidebar">
          <nav class="doc-nav">
            <ul class="doc-nav__list">
              <% collections.docs.forEach(doc => { %>
                <li class="<%= doc.path === path ? 'doc-nav__item active' : 'doc-nav__item' %>">
                <a class="doc-nav__anchor" href="/<%= doc.path %>"><%= doc.title %></a>
                </li>
                <% }); %>
              </ul>
            </nav>
          </aside>
          <section class="doc__content">
            <%- contents %>
          </section>
        </div>
    </div>
  </body>
</html>
