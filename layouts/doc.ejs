<!DOCTYPE html>
<html>
  <head>
    <title><%= locals.title ? `${title} | contentjet` : 'contentjet' %></title>
    <%- include('includes/stylesheets'); %>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/atom-one-light.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
  </head>
  <body>
    <%- include('includes/header'); %>
    <div class="main">
      <div class="doc">
        <aside class="doc__sidebar">
          <nav class="doc-nav">
            <ul class="doc-nav__list">
              <% collections.docs.forEach(doc => { %>
                <li class="<%= doc.path === path ? 'doc-nav__item active' : 'doc-nav__item' %>">
                <a class="doc-nav__anchor" href="/<%= doc.path %>"><%= doc.title %></a>
                </li>
                <% }); %>
              </ul>
            </nav>
          </aside>
          <section class="doc__content">
            <%- contents %>
          </section>
        </div>
    </div>
  </body>
</html>
